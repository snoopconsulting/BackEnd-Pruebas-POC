<LINK href="../../css/styles.css" rel="stylesheet" type="text/css">

<body>

<div>

    <center>
        <img src="http://cognitiva.la/wp-content/themes/Watson/images/logos/Snoop.jpg">
    </center>

    {{#if error}}

        <h3>RECURSO NO ENCONTRADO</h3>

        {{error}}

    {{else}}

        <a href="#contenedorPrincipal" class="btn btn-info btn-block"
           data-toggle="collapse">{{objectoPrincipal.titulo}}</a>

    <div id="contenedorPrincipal" class="collapse">

        <h3>{{objectoPrincipal.titulo}}</h3>

        <table class="table table-striped">
            <th>Campo</th>
            <th>Valor</th>
            {{#each objectoPrincipal.objetos}}
                <tr>
                    <td>{{campo}}</td>
                    <td>
                        {{#each valor}}
                            <a href="#{{this}}" class="btn btn-info btn-block"
                               data-toggle="collapse">ir a {{this}}</a>
                        {{else}}
                            {{valor}}
                        {{/each}}

                    </td>
                </tr>
            {{/each}}
        </table>



        {{#each objectosSecundarios}}

            <div id="{{titulo}}" class="collapse">

                <a href="#{{titulo}}" class="btn btn-block black-background white"
                   data-toggle="collapse">{{titulo}}</a>

                <table class="table table-striped">
                    <th>Campo</th>
                    <th>Valor</th>
                    {{#each objetos}}
                        <tr>
                            <td>{{campo}}</td>
                            <td>
                                {{#each valor}}
                                    <a href="#{{this}}" class="btn btn-info btn-block"
                                       data-toggle="collapse"> ir a {{this}}</a>
                                {{else}}
                                    {{valor}}
                                {{/each}}

                            </td>
                        </tr>
                    {{/each}}
                </table>
            </div>

        {{/each}}

    {{/if}}

</div>

</div>

</body>

